@* @page
@model APP_SITE_ACADEMIA.Pages.Shared.AvaliacaoFisica.IndexModel
@{
    ViewData["Title"] = "Avaliação Física";
    Layout = "_Layout";
}

<style>
    .section-title {
        background-color: orange;
        color: white;
        padding: 10px;
        margin-bottom: 10px;
        font-weight: bold;
        text-align: center;
        border-radius: 5px;
    }

    .form-section {
        background-color: white;
        padding: 25px;
        border: 1px solid #ddd;
        border-radius: 8px;
        max-width: 500px;
        margin: 0 auto;
        box-shadow: 0 2px 6px rgba(0,0,0,0.1);
    }

    label {
        font-weight: bold;
        margin-top: 10px;
        display: block;
    }

    .form-control {
        width: 100%;
        padding: 8px;
        margin-bottom: 15px;
        border-radius: 4px;
        border: 1px solid #ccc;
    }

    .btn-primary {
        background-color: orange;
        border: none;
        padding: 10px 20px;
        color: white;
        font-weight: bold;
        cursor: pointer;
        border-radius: 5px;
        width: 100%;
    }

    th {
        background-color: orange !important;
        color: white !important;
    }

    #resultado {
        margin-top: 15px;
        font-weight: bold;
        text-align: center;
        font-size: 1.2em;
    }

    /* 🔹 Tabelas */
    table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 30px;
        text-align: center;
    }

    th, td {
        border: 1px solid #ddd;
        padding: 8px;
    }

    th {
        background-color: orange;
        color: white;
    }

    tr:nth-child(even) {
        background-color: #f9f9f9;
    }

    tr:hover {
        background-color: #ffeccc;
    }
</style>

<div class="container mt-4">
    <h2 class="text-center text-uppercase mb-4">Calculadora de IMC</h2>

    <div class="form-section">
        <form method="post">
            <label>Peso (kg):</label>
            <input asp-for="Peso" id="Peso" type="number" step="0.1" class="form-control" placeholder="Ex: 70" />

            <label>Altura (m):</label>
            <input asp-for="Altura" id="Altura" type="number" step="0.01" class="form-control" placeholder="Ex: 1.75" />

            <button type="button" class="btn-primary" onclick="calcularIMC()">Calcular IMC</button>

            <div id="resultado"></div>
        </form>
    </div>

    <!-- 🔽🔽🔽 COMPLEMENTO ADICIONADO AQUI 🔽🔽🔽 -->

    <hr />
    <h3 class="text-center mt-5">Histórico de IMC</h3>

    <table class="table table-striped text-center">
        <thead>
            <tr>
                <th>Peso</th>
                <th>Altura</th>
                <th>Resultado</th>
                <th>Data</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.ListaIMC != null && Model.ListaIMC.Count > 0)
            {
                foreach (var item in Model.ListaIMC)
                {
                    <tr>
                        <td>@item.Peso</td>
                        <td>@item.Altura</td>
                        <td>@item.Resultado</td>
                        <td>@item.Data</td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="4">Nenhum IMC registrado ainda.</td>
                </tr>
            }
        </tbody>
    </table>

    <hr />
    <h3 class="text-center mt-5">Histórico de Avaliação Física</h3>

    <table class="table table-striped text-center">
        <thead>
            <tr>
                <th>Data</th>
                <th>Braço D.</th>
                <th>Braço E.</th>
                <th>Cintura</th>
                <th>Abdômen</th>
                <th>Coxa D.</th>
                <th>Coxa E.</th>
                <th>Pant. D.</th>
                <th>Pant. E.</th>
                <th>Pressão</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.ListaAvaliacoes != null && Model.ListaAvaliacoes.Count > 0)
            {
                foreach (var item in Model.ListaAvaliacoes)
                {
                    <tr>
                        <td>@item.Data</td>
                        <td>@item.BracoDireito</td>
                        <td>@item.BracoEsquerdo</td>
                        <td>@item.Cintura</td>
                        <td>@item.Abdomen</td>
                        <td>@item.CoxaDireita</td>
                        <td>@item.CoxaEsquerda</td>
                        <td>@item.PanturrilhaDireita</td>
                        <td>@item.PanturrilhaEsquerda</td>
                        <td>@item.PressaoArterial</td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="10">Nenhuma avaliação física encontrada.</td>
                </tr>
            }
        </tbody>
    </table>

    <!-- 🔼🔼🔼 FIM DO COMPLEMENTO 🔼🔼🔼 -->
</div>

<script>
    function calcularIMC() {
        const peso = parseFloat(document.getElementById('Peso').value.replace(',', '.'));
        const altura = parseFloat(document.getElementById('Altura').value.replace(',', '.'));
        const resultado = document.getElementById('resultado');

        if (isNaN(peso) || isNaN(altura) || altura <= 0) {
            resultado.style.color = "red";
            resultado.textContent = "Por favor, insira valores válidos de peso e altura.";
            return;
        }

        const imc = peso / (altura * altura);
        const imcFormatado = imc.toFixed(2);

        let classificacao = "";
        let cor = "";

        if (imc < 18.5) {
            classificacao = "Abaixo do peso";
            cor = "orange";
        } else if (imc < 25) {
            classificacao = "Peso normal";
            cor = "green";
        } else if (imc < 30) {
            classificacao = "Sobrepeso";
            cor = "orange";
        } else if (imc < 35) {
            classificacao = "Obesidade Grau I";
            cor = "red";
        } else if (imc < 40) {
            classificacao = "Obesidade Grau II";
            cor = "red";
        } else {
            classificacao = "Obesidade Grau III (mórbida)";
            cor = "darkred";
        }

        resultado.style.color = cor;
        resultado.innerHTML = `Seu IMC é <b>${imcFormatado}</b> — <span>${classificacao}</span>`;
    }
</script>
 *@