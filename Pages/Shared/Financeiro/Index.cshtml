@* @page
@model APP_Academia.Pages.Shared.Financeiro.IndexModel
@{
    ViewData["Title"] = "Financeiro";
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f9;
        }

        .card-header {
            background-color: #ff7f00;
            color: white;
        }

        .card-body {
            background-color: #ffffff;
        }

        .btn-primary {
            background-color: #ff7f00;
            border-color: #ff7f00;
        }

            .btn-primary:hover {
                background-color: #e56c00;
                border-color: #e56c00;
            }

        .alert-info {
            background-color: #ff7f00;
            color: white;
        }

        .badge-success {
            background-color: green;
            color: white;
        }

        .badge-danger {
            background-color: red;
            color: white;
        }

        .badge-warning {
            background-color: #ffcc00;
            color: black;
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <!-- Título -->
        <h2 class="text-center mb-4 d-inline-block">Resumo Financeiro</h2>

        <!-- Alerta de informação -->
        <div class="alert alert-info" role="alert">
            <strong>Informação:</strong> Consulte seus valores pagos e próximos pagamentos aqui.
        </div>

        <!-- Cards de informações -->
        <div class="row">
            <!-- Valores Pagos -->
            <div class="col-md-6 mb-4">
                <div class="card shadow-sm">
                    <div class="card-header">
                        <h5>Valores Pagos</h5>
                    </div>
                    <div class="card-body">
                        <p><strong>Último pagamento:</strong> @Model.UltimoPagamentoValor</p>
                        <p><strong>Data do pagamento:</strong> @Model.UltimoPagamentoData</p>
                        <p><strong>Total pago até o momento:</strong> @Model.TotalPago</p>
                    </div>
                </div>
            </div>

            <!-- Próximos Pagamentos -->
            <div class="col-md-6 mb-4">
                <div class="card shadow-sm">
                    <div class="card-header">
                        <h5>Próximos Pagamentos</h5>
                    </div>
                    <div class="card-body">
                        <p><strong>Próximo pagamento:</strong> @Model.ProximoPagamentoValor</p>
                        <p><strong>Data do próximo pagamento:</strong> @Model.ProximoPagamentoData</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Histórico de Pagamentos -->
        <div class="card mb-4 shadow-sm">
            <div class="card-header">
                <h5>Histórico de Pagamentos</h5>
            </div>
            <div class="card-body">
                @if (Model.Historico != null && Model.Historico.Count > 0)
                {
                    <table class="table table-striped align-middle">
                        <thead>
                            <tr>
                                <th>Data</th>
                                <th>Serviço</th>
                                <th>Valor</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Historico)
                            {
                                var badgeClass = item.Status == "Pago"
                                ? "badge-success"
                                : (item.Status == "Em Atraso" ? "badge-danger" : "badge-warning");

                                <tr>
                                    <td>@item.Data</td>
                                    <td>@item.Servico</td>
                                    <td>@item.Valor</td>
                                    <td><span class="badge @badgeClass">@item.Status</span></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <p class="text-center text-muted">Nenhum pagamento encontrado.</p>
                }
            </div>
        </div>

        <!-- Botão para atualizar -->
        <div class="text-center">
            <form method="get">
                <button type="submit" class="btn btn-primary">Atualizar informações</button>
            </form>
        </div>

        <!-- Mensagem de erro (se houver) -->
        @if (!string.IsNullOrEmpty(Model.Mensagem))
        {
            <div class="alert alert-danger text-center mt-3 py-2 rounded-4">
                @Model.Mensagem
            </div>
        }
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
 *@