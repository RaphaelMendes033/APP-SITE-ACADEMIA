@page
@model APP_Academia.Pages.Shared.Financeiro.IndexModel
@{
    ViewData["Title"] = "Financeiro";

  
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f9;
        }

        .card-header {
            background-color: #ff7f00;
            color: white;
        }

        .card-body {
            background-color: #ffffff;
        }

        .btn-primary {
            background-color: #ff7f00;
            border-color: #ff7f00;
        }

            .btn-primary:hover {
                background-color: #e56c00;
                border-color: #e56c00;
            }

        .alert-info {
            background-color: #ff7f00;
            color: white;
        }

        /* Estilo para os badges de status */
        .badge-success {
            background-color: green;
            color: white;
        }

        .badge-danger {
            background-color: red;
            color: white;
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <!-- Título da página -->
        <h2 class="text-center mb-4 d-inline-block">Resumo Financeiro</h2>

        <!-- Alerta de informação -->
        <div class="alert alert-info" role="alert">
            <strong>Informação:</strong> Consulte os valores pagos e próximos pagamentos diretamente aqui.
        </div>

        <!-- Cards de informações -->
        <div class="row">
            <!-- Valores Pagos -->
            <div class="col-md-6 mb-4">
                <div class="card">
                    <div class="card-header">
                        <h5>Valores Pagos</h5>
                    </div>
                    <div class="card-body">
                        <p><strong>Último pagamento:</strong> R$ 150,00</p>
                        <p><strong>Data do pagamento:</strong> 15/01/2025</p>
                        <p><strong>Total pago até o momento:</strong> R$ 450,00</p>
                    </div>
                </div>
            </div>

            <!-- Próximos Pagamentos -->
            <div class="col-md-6 mb-4">
                <div class="card">
                    <div class="card-header">
                        <h5>Próximos Pagamentos</h5>
                    </div>
                    <div class="card-body">
                        <p><strong>Próximo pagamento:</strong> R$ 150,00</p>
                        <p><strong>Data do próximo pagamento:</strong> 15/02/2025</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Histórico de Pagamentos -->
        <div class="card mb-4">
            <div class="card-header">
                <h5>Histórico de Pagamentos</h5>
            </div>
            <div class="card-body">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Data</th>
                            <th>Serviço</th> <!-- Novo campo Serviço -->
                            <th>Valor</th>
                            <th>Status</th>
                            
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>15/01/2025</td>
                            <td>Musculação</td> <!-- Serviço correspondente -->
                            <td>R$ 150,00</td>
                            <td><span class="badge badge-success">Pago</span></td>
                            
                        </tr>
                        <tr>
                            <td>15/12/2024</td>
                            <td>Boxe</td> <!-- Serviço correspondente -->
                            <td>R$ 150,00</td>
                            <td><span class="badge badge-success">Pago</span></td>
                          
                        </tr>
                        <tr>
                            <td>15/11/2024</td>
                            <td>Musculação</td> <!-- Serviço correspondente -->
                            <td>R$ 150,00</td>
                            <td><span class="badge badge-danger">Em Atraso</span></td>
                          
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>


        <!-- Botão para atualizar -->
        <div class="text-center">
            <button class="btn btn-primary">Atualizar informações</button>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
