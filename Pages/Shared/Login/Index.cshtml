@page
@model APP_SITE_ACADEMIA.Pages.Shared.Login.IndexModel
@{
    ViewData["Title"] = "Login do Colaborador";
}

<div class="d-flex justify-content-center align-items-center vh-100 bg-light">
    <div class="card shadow-lg border-0 p-4" style="width: 400px; border-radius: 20px;">
        <div class="text-center mb-4">
            <h3 class="fw-bold text-dark">Acesso ao Sistema</h3>
            <p class="text-muted mb-0">Informe os dados para entrar</p>
        </div>

        <form method="post">
            <div class="form-floating mb-3">
                <input type="number" asp-for="CodigoEmpresa" class="form-control rounded-4" id="codigoEmpresa" placeholder="Código da Empresa" required />
                <label for="codigoEmpresa">Código da Empresa</label>
            </div>

            <div class="form-floating mb-4">
                <input type="password" asp-for="Senha" class="form-control rounded-4" id="senha" placeholder="Senha" required />
                <label for="senha">Senha</label>
            </div>

            <button type="submit" class="btn btn-primary w-100 rounded-4 fw-semibold" style="height: 45px;">
                Entrar
            </button>
        </form>

        @if (!string.IsNullOrEmpty(Model.Mensagem))
        {
            <div class="alert alert-danger text-center mt-3 py-2 rounded-4">
                @Model.Mensagem
            </div>
        }
    </div>
</div>
