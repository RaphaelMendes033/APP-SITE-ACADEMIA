@page
@model APP_SITE_ACADEMIA.Pages.Shared.Login.IndexModel
@{
    ViewData["Title"] = "Bem Vindo - SGA - Academia";
}
<h2>Resultado da Consulta</h2>

<pre>@Model.ResultadoConsulta</pre>

<div class="d-flex justify-content-center align-items-center vh-100" style="background: linear-gradient(135deg, #1e3c72, #2a5298);">
    <div class="card shadow-lg border-0 p-4" style="width: 400px; border-radius: 20px;">
        <div class="text-center mb-4">
            <h3 class="fw-bold text-dark">Acesso ao Sistema</h3>
            <p class="text-muted mb-0">Informe seus dados para entrar</p>
        </div>

        <form method="post" id="loginForm">
            <div class="form-floating mb-3">
                <input type="text" asp-for="NomeBanco" class="form-control rounded-4" id="nomeBanco" placeholder="Nome do Banco" required />
                <label for="nomeBanco">Nome do Banco</label>
                <div id="lblEmpresa" class="text-center text-success fw-semibold mb-3" style="display:none;"></div>
            </div>
           


            <div class="form-floating mb-3">
                <input type="text" asp-for="Documento" class="form-control rounded-4" id="documento" placeholder="CPF" required />
                <label for="documento">CPF</label>
            </div>

            <div class="form-floating mb-4">
                <input type="password" asp-for="Senha" class="form-control rounded-4" id="senha" placeholder="Senha" required />
                <label for="senha">Senha</label>
            </div>

            <button type="submit" id="btnEntrar" class="btn btn-primary w-100 rounded-4 fw-semibold" style="height: 45px;">
                Entrar
            </button>
        </form>

        @if (!string.IsNullOrEmpty(Model.Mensagem))
        {
            <div class="alert alert-danger text-center mt-3 py-2 rounded-4">
                @Model.Mensagem
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        const campoBanco = document.getElementById('nomeBanco');
        const lblEmpresa = document.getElementById('lblEmpresa');
        const campoDocumento = document.getElementById('documento');
        const campoSenha = document.getElementById('senha');
        const btnEntrar = document.getElementById('btnEntrar');

        // Inicialmente desabilita campos
        campoDocumento.disabled = true;
        campoSenha.disabled = true;
        btnEntrar.disabled = true;

        campoBanco.addEventListener('blur', async function () {
            const nomeBanco = this.value.trim();
            if (!nomeBanco) return;

            lblEmpresa.style.display = "none";
            lblEmpresa.textContent = "";
            lblEmpresa.classList.remove("text-danger", "text-success");

            campoDocumento.disabled = true;
            campoSenha.disabled = true;
            btnEntrar.disabled = true;

            try {
                const resp = await fetch(`?handler=BuscarEmpresa&nomeBanco=${encodeURIComponent(nomeBanco)}`);
                const data = await resp.json();

                if (data.sucesso) {
                    lblEmpresa.textContent = `✅ Empresa encontrada: ${data.nome}`;
                    lblEmpresa.classList.add("text-success");
                    lblEmpresa.style.display = "block";

                    // ✅ Habilita os campos
                    campoDocumento.disabled = false;
                    campoSenha.disabled = false;
                    btnEntrar.disabled = false;
                } else {
                    lblEmpresa.textContent = data.erro || "❌ Empresa não encontrada.";
                    lblEmpresa.classList.add("text-danger");
                    lblEmpresa.style.display = "block";
                }
            } catch {
                lblEmpresa.textContent = "❌ Erro de conexão.";
                lblEmpresa.classList.add("text-danger");
                lblEmpresa.style.display = "block";
            }
        });
    </script>
}



